<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FootballTeamsGenerator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Light Mode -->
    <!-- Screen background if light mode on-->
    <style name="SCREEN">
        <item name="android:background">@color/white</item>
    </style>
    <!-- Text background if light mode on-->
    <style name="TEXT">
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- Button background if light mode on-->
    <style name="BUTTON">
        <item name="android:backgroundTint">@color/teal_700</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- View background if light mode on-->
    <style name="VIEW_DIVIDER">
        <item name="android:background">@color/black</item>
    </style>
    <!-- Spinner background if light mode on-->
    <style name="SPINNER">
        <item name="android:backgroundTint">@color/white</item>

        <item name="android:textColorHint">@color/black</item>
        <item name="android:popupBackground">@color/black</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>